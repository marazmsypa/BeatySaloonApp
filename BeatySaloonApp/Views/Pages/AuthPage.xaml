<Page x:Class="BeatySaloonApp.Views.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BeatySaloonApp.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <StackPanel Width="300" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Style="{StaticResource AuthTextBlock}">
                Логин
            </TextBlock>
            <TextBox FontSize="20" x:Name="LoginTextBox">

            </TextBox>
            <TextBlock Style="{StaticResource AuthTextBlock}">
            Пароль
            </TextBlock>
            <PasswordBox  FontSize="20" x:Name="PasswordPasswordBox">
                
            </PasswordBox>
            <Button Content="Sign In" Style="{StaticResource ElementButton}" x:Name="SignInButton" Click="SignInButton_Click">
                
            </Button>
            <Button Content="Зарегистрироваться" Style="{StaticResource ElementButton}" x:Name="RegButton" Click="RegButton_Click">
                
            </Button>
        </StackPanel>
    </Grid>
</Page>
