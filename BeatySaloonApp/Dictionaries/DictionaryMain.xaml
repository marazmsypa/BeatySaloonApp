<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:BeatySaloonApp.Dictionaries">
    
    <Style TargetType="TextBlock" x:Key="LabelTextBlock">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    <Style TargetType="Image" x:Key="LabelImage">
        <Setter Property="Height" Value="200"/>
    </Style>
    <Style TargetType="Button" x:Key="ElementButton">
        <Setter Property="Background" Value="#99d4ff"/>
        <Setter Property="Margin" Value="20 10 20 10"/>
        <Setter Property="Padding" Value="5"/>
    </Style>
    <Style TargetType="TextBlock" x:Key="AuthTextBlock">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="25"/>
        <Setter Property="Margin" Value="20 10 20 10"/>
    </Style>
</ResourceDictionary>
   
    